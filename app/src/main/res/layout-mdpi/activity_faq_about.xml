<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:background="@color/white"
    tools:context=".faq_about">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="-80dp"
                android:layout_marginRight="-80dp"
                android:layout_marginTop="-50dp"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gradient" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="FAQ's"
                    android:textColor="@color/white"
                    android:textSize="55sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:text="General"
                android:textColor="@color/quantum_black_100"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/expandableButton1"
                android:fontFamily="@font/roboto"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="450dp"
                android:layout_marginTop="15dp"
                android:gravity="left|center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton1"
                android:elevation="0dp"
                android:text="What is Raksha Sutra?"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton1"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="150dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/quantum_black_100"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="14sp"
                    android:text="Raksha Sutra is a digital service, primarily a mobile application, and aimed at providing containment zones information to the users.
It is designed to give people a platform to get updated with latest information about their surroundings and limit the spread of COVID-19." />
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:id="@+id/expandableButton2"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_below="@+id/expandableLayout1"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton2"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:layout_marginStart="-10dp"
                android:text="Why should I use Raksha Sutra?"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton2"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:text="Raksha Sutra is a bridge that connects to prevent the spread of coronavirus within community. Raksha Sutra as the name suggests by alerting you protects from containment zone where the virus was detected.
Raksha Sutra uses location tracking to shield you, your family and your community from spreading of virus during your daily commute. " />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:id="@+id/expandableButton3"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="450dp"
                android:gravity="left|center_vertical"
                android:layout_marginStart="-10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableLayout2"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton3"
                android:paddingStart="40dp"
                android:text="Does containment zones get updated every week?"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton3"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:text="Yes, the containment zones get updated every week. The App also make sure that old containment areas which are now open for public access is removed and new containment areas are added." />
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:id="@+id/expandableButton4"
                android:textAllCaps="false"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_marginStart="-10dp"
                android:layout_below="@+id/expandableLayout3"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton4"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:text="Why should I trust the information given?"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton4"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="140dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/quantum_black_100"
                    android:text="The containment zone area information is taken directly from Telangana government bulletin release. The app only shows the containment areas, and does not specify whether the area is open or restricted for public access.
Visit https://covid19.telangana.gov.in/" />
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:id="@+id/expandableButton5"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_below="@+id/expandableLayout4"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton5"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:layout_marginStart="-10dp"
                android:text="Does Raksha Sutra work for my city?"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton5"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:text="Raksha Sutra currently shows containment zones for Telangana state only. However, in near future we will be updating containment zones for other major cities as well. " />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:text="Privacy"
                android:textColor="@color/quantum_black_100"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>


            <Button
                android:id="@+id/expandableButton6"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_below="@+id/expandableLayout5"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton6"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:layout_marginStart="-10dp"
                android:text="What personal information does Raksha Sutra \ncollect from users?"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton6"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="15dp"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:text="Raksha Sutra does not in anyways store your information. Raksha Sutra only uses your mobile location to keep you altered and the information is stored on your device only." />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            <Button
                android:id="@+id/expandableButton7"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_below="@+id/expandableLayout6"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton7"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:layout_marginStart="-10dp"
                android:text="How does Raksha Sutra secure your information?"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton7"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:text="As we have suggested previously, Raksha Sutra does not store your information. Therefore, your information is secured with your device." />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            <Button
                android:id="@+id/expandableButton8"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_below="@+id/expandableLayout7"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton8"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:layout_marginStart="-10dp"
                android:text="How long is the information stored?"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton8"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="15dp"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:text="The information is not stored in any form, however Raksha Sutra tracks your location in real-time and stores the data in the app only.
Raksha Sutra starts tracking once you open the application and stops once you close the app. " />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:text="Technical"
                android:textColor="@color/quantum_black_100"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/expandableButton9"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_below="@+id/expandableLayout8"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton9"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:layout_marginStart="-10dp"
                android:text="Why am I requested to keep set my location sharing \nto “Always”? Is my location being continuously \nmonitored? "
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton9"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="15dp"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:text="You need to keep your location sharing set to “Always” for the following specific reasons:
\nA. To pinpoint the locations where you are currently using the app \nB. To use that location for alerting you if you are in the containment zone or not. " />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            <Button
                android:id="@+id/expandableButton10"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_below="@+id/expandableLayout9"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton10"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:layout_marginStart="-10dp"
                android:text="Which operating systems does Raksha Sutra support?"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/expandableButton10"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:text="Raksha Sutra is available for Android users only. A version of the App for iOS will be launched soon. " />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            <Button
                android:id="@+id/expandableButton11"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_below="@+id/expandableLayout10"
                android:background="@drawable/button_expandable"
                android:onClick="expandableButton11"
                android:paddingStart="40dp"
                android:textSize="15sp"
                android:layout_marginStart="-10dp"
                android:text="How do I share feedback and suggestions for \nRaksha Sutra?"
                android:textColor="@color/quantum_black_100" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_below="@+id/expandableButton11"
                android:background="@color/white"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="15dp"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:text="You can leave a comment on the Play Store. We are also working on adding features where you can send us feedback directly from the app, which will be made available soon. " />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>