<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_permission"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Permission"
            android:textColor="@color/quantum_black_text"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_condensed_bold"/>

        <ImageView
            android:background="@drawable/permission"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="190dp"/>

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/white"
            android:layout_marginTop="-95dp"
            android:text="We understand the nature and sensitivity of this topic and have taken strong measures to ensure that your data is not compromised."/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_marginTop="-90dp"
            android:textSize="17sp"
            android:layout_marginBottom="30dp"
            android:text="Terms of Service &amp; Privacy"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-90dp"
            android:src="@drawable/lock"/>
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_marginTop="155dp">
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="10dp"
            android:textColor="@color/quantum_black_text"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Device Location"/>

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="left"
            android:text="Application needs permission to access device location to provide services. Please allow permission
\n\nIt is recommended that you set your location sharing to 'Always'. You can change this anytime later. "
            android:textColor="@color/quantum_black_100"
            android:textSize="12sp" />
        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/roboto"
            android:gravity="left"
            android:text="Data Sharing"
            android:textStyle="bold"
            android:textColor="@color/quantum_black_text"
            android:textSize="15sp" />
        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="left"
            android:text="The App does not allow your name, number and location to be saved or disclosed to the public at large any time."
            android:textColor="@color/quantum_black_100"
            android:textSize="12sp" />

    </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="600dp"
        android:background="@color/breaker"/>

    <Button
        android:id="@+id/btn_grant"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/update_news"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:elevation="10dp"
        android:text="I Agree"
        android:textAllCaps="false"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto"/>

</RelativeLayout>
